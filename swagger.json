{
  "swagger": "2.0",
  "info": {
    "title": "Node.js Project Demo",
    "version": "1.0.0",
    "description": "Node.js Project Demo APIs documentation",
    "licence": {
      "name": "Asif Sk"
    }
  },
  "host": "localhost:3001",
  "basepath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "All user routes"
    },
    {
      "name": "Posts",
      "description": "All posts routes"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "jwt": {
      "type": "apiKey",
      "in": "cookie",
      "name": "token"
    }
  },
  "security": [
    {
      "jwt": []
    }
  ],
  "paths": {
    "/user/sign-up": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "User Sign Up",
        "security": [],
        "consumes": [
          "application/json",
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/user"
            }
          },
          "403": {
            "description": "User already Exists"
          },
          "400": {
            "description": "Validation Error"
          }
        }
      }
    },
    "/user/sign-in": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "User Sign In",
        "security": [],
        "consumes": [
          "application/json",
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to login or authenticate",
            "schema": {
              "$ref": "#/definitions/userLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull login",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number"
                    },
                    "route": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User already loggedin"
          },
          "422": {
            "description": "Validation Error"
          }
        }
      }
    },
    "/posts/": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get all posts when user is not Logged-In",
        "security": [],
        "responses": {
          "200": {
            "description": "Details of Post",
            "schema": {
              "$ref": "#/definitions/allposts"
            }
          }
        }
      }
    },
    "/posts/all-post": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get all posts when user is Logged-In",
        "responses": {
          "200": {
            "description": "Details of Post",
            "schema": {
              "$ref": "#/definitions/allposts"
            }
          },
          "401": {
            "description": "Unauthorized Access"
          }
        }
      }
    },
    "/posts/register": {
      "post": {
        "tags": [
          "Posts"
        ],
        "summary": "Register or Add new Post",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "posttitle",
            "in": "formData",
            "type": "string",
            "description": "Title of the post"
          },
          {
            "name": "postimage",
            "in": "formData",
            "type": "file",
            "description": "Image to be uploaded"
          },
          {
            "name": "postcontent",
            "in": "formData",
            "type": "string",
            "description": "Content of the post"
          }
        ],
        "responses": {
          "200": {
            "description": "New Post added",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number"
                    },
                    "route": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "posttitle": {
                          "type": "string"
                        },
                        "postimage": {
                          "type": "string"
                        },
                        "postcontent": {
                          "type": "string"
                        },
                        "postauthor": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized Access"
          },
          "500": {
            "description": "Error while writing to database"
          },
          "400": {
            "description": "Validation Error"
          }
        }
      }
    },
    "/posts/add-comment": {
      "put": {
        "tags": [
          "Posts"
        ],
        "summary": "Register or Add new Post",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Comment details",
            "schema": {
              "$ref": "#/definitions/comment"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Comment Added to the Post"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Error While updating"
          }
        }
      }
    },
    "/posts/remove-comment": {
      "put": {
        "tags": [
          "Posts"
        ],
        "summary": "Add comment to the post",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Comment of the post",
            "schema": {
              "$ref": "#/definitions/deletecomment"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted from the post"
          },
          "401": {
            "description": "Unauthorized Access"
          },
          "404": {
            "description": "Either comment not found or post not found"
          }
        }
      }
    },
    "/posts/my-post": {
      "get": {
        "tags": [
          "Posts"
        ],
        "summary": "Get all post of a particular user",
        "responses": {
          "200": {
            "description": "Comment deleted from the post"
          },
          "401": {
            "description": "Unauthorized Access"
          },
          "404": {
            "description": "Either comment not found or post not found"
          }
        }
      }
    },
    "/posts/edit-post": {
      "put": {
        "tags": [
          "Posts"
        ],
        "summary": "Edit a particular post",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "posttitle",
            "in": "formData",
            "type": "string",
            "description": "Title of the post"
          },
          {
            "name": "postimage",
            "in": "formData",
            "type": "file",
            "description": "Image to be uploaded"
          },
          {
            "name": "postcontent",
            "in": "formData",
            "type": "string",
            "description": "Content of the post"
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted from the post"
          },
          "400":{
            "description": "Validation Error"
          },
          "401": {
            "description": "Unauthorized Access"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Error While updating"
          }
        }
      }
    },
    "/posts/delete-post": {
      "put": {
        "tags": [
          "Posts"
        ],
        "summary": "Edit a particular post",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "type": "string",
            "description": "Title of the post"
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted from the post"
          },
          "400":{
            "description": "Validation Error"
          },
          "401": {
            "description": "Unauthorized Access"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Error While updating"
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "required": [
        "fullname",
        "username",
        "email",
        "password",
        "confirmPassword"
      ],
      "properties": {
        "fullname": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        }
      }
    },
    "allposts": {
      "required": [
        "postTitle",
        "postImage",
        "postContent"
      ],
      "properties": {
        "postTitle": {
          "type": "string"
        },
        "postImage": {
          "type": "string"
        },
        "postContent": {
          "type": "string"
        }
      }
    },
    "userLogin": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "comment": {
      "required": [
        "postId",
        "comment"
      ],
      "properties": {
        "postId": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        }
      }
    },
    "deletecomment": {
      "required": [
        "postId",
        "commentId"
      ],
      "properties": {
        "postId": {
          "type": "string"
        },
        "commentId": {
          "type": "string"
        }
      }
    }
  }
}